<%= form_for @place, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user,  :placeholder => "Your fullname",:class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :rent, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :rent,  :placeholder => "Rent in INR",:class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :placeholder => "Brief Description", :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "Street address", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :houseno, :placeholder => "House no, Street name ", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Area/Locality", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street,  :placeholder => "Street name/ Area", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :placeholder => "City", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :placeholder => "Country", :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-large' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                places_path, :class => 'btn btn-large' %>
  </div>
<% end %>
